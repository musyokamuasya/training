fun main() {
    val rectangle = Rectangle(20, 15);
    val square = Square(20)
    println("The area of the rectangle is ${rectangle.area}")
    println("The area of the square is ${square.area}")
    println("The perimeter of the square is ${square.perimeter}")
}

class Rectangle(var length: Int, var width: Int){
	var area = length*width
}

class Square(var side: Int){
    var area = side*side
    var perimeter = side*4
}
